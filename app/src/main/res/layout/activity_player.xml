<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/ConstraintLayout"
    tools:context=".PlayerActivity">

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        style="@style/Guideline.Horizontal"
        app:layout_constraintGuide_begin="@dimen/panel_header_height" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        style="@style/Guideline.Horizontal"
        app:layout_constraintGuide_end="?actionBarSize" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        style="@style/Guideline.Vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        style="@style/Guideline.Vertical"
        app:layout_constraintGuide_end="24dp" />

    <!-- Header -->
    <com.dimasla4ee.playlistmaker.view.PanelHeader
        android:id="@+id/panelHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconSrc="@drawable/ic_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:showIcon="true" />

    <!-- Top part -->
    <ImageView
        android:id="@+id/songCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="24dp"
        android:importantForAccessibility="no"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintWidth_max="500dp" />

    <TextView
        android:id="@+id/songTitle"
        style="@style/Text.Medium.22"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@id/songCover"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/songCover"
        app:layout_constraintTop_toBottomOf="@id/songCover"
        app:layout_constraintWidth="wrap_content_constrained" />

    <TextView
        android:id="@+id/songAuthor"
        style="@style/Text.Medium.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/songCover"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/songTitle"
        app:layout_constraintTop_toBottomOf="@id/songTitle"
        app:layout_constraintVertical_chainStyle="spread" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/playButton"
        style="@style/FloatingActionButton.Big"
        android:contentDescription="@string/play"
        app:layout_constraintBottom_toTopOf="@id/songDurationLabel"
        app:layout_constraintEnd_toStartOf="@id/addToFavoriteButton"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/addToPlaylistButton"
        app:layout_constraintTop_toBottomOf="@+id/songAuthor"
        app:srcCompat="@drawable/ic_play_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addToPlaylistButton"
        style="@style/FloatingActionButton.Small"
        android:contentDescription="@string/add_to_playlist"
        app:layout_constraintBottom_toBottomOf="@+id/playButton"
        app:layout_constraintEnd_toStartOf="@id/playButton"
        app:layout_constraintStart_toStartOf="@id/songCover"
        app:layout_constraintTop_toTopOf="@+id/playButton"
        app:srcCompat="@drawable/ic_add_to_playlist_24" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addToFavoriteButton"
        style="@style/FloatingActionButton.Small"
        android:contentDescription="@string/add_to_favorite"
        app:layout_constraintBottom_toBottomOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="@id/songCover"
        app:layout_constraintStart_toEndOf="@id/playButton"
        app:layout_constraintTop_toTopOf="@+id/playButton"
        app:srcCompat="@drawable/ic_favorite_24" />

    <TextView
        android:id="@+id/songCurrentDuration"
        style="@style/Text.Medium.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/songDurationLabel"
        app:layout_constraintEnd_toEndOf="@id/playButton"
        app:layout_constraintStart_toStartOf="@id/playButton"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Duration -->
    <TextView
        android:id="@+id/songDurationLabel"
        style="@style/Text.SongInfo.Label"
        android:text="@string/duration_label"
        app:layout_constraintBottom_toTopOf="@id/songAlbumLabel"
        app:layout_constraintEnd_toStartOf="@id/songDurationFetched"
        app:layout_constraintStart_toStartOf="@id/songCover" />

    <TextView
        android:id="@+id/songDurationFetched"
        style="@style/Text.SongInfo.Fetched"
        app:layout_constraintBottom_toBottomOf="@id/songDurationLabel"
        app:layout_constraintEnd_toEndOf="@id/songCover"
        app:layout_constraintStart_toEndOf="@id/songDurationLabel" />

    <!-- Album -->
    <TextView
        android:id="@+id/songAlbumLabel"
        style="@style/Text.SongInfo.Label"
        android:text="@string/album_label"
        app:layout_constraintBottom_toTopOf="@id/songYearLabel"
        app:layout_constraintEnd_toStartOf="@id/songAlbumFetched"
        app:layout_constraintStart_toStartOf="@id/songCover" />

    <TextView
        android:id="@+id/songAlbumFetched"
        style="@style/Text.SongInfo.Fetched"
        app:layout_constraintBottom_toBottomOf="@id/songAlbumLabel"
        app:layout_constraintEnd_toEndOf="@id/songCover"
        app:layout_constraintStart_toEndOf="@id/songAlbumLabel" />

    <!-- Year -->
    <TextView
        android:id="@+id/songYearLabel"
        style="@style/Text.SongInfo.Label"
        android:text="@string/year_label"
        app:layout_constraintBottom_toTopOf="@id/songGenreLabel"
        app:layout_constraintEnd_toStartOf="@id/songYearFetched"
        app:layout_constraintStart_toStartOf="@id/songCover" />

    <TextView
        android:id="@+id/songYearFetched"
        style="@style/Text.SongInfo.Fetched"
        app:layout_constraintBottom_toBottomOf="@id/songYearLabel"
        app:layout_constraintEnd_toEndOf="@id/songCover"
        app:layout_constraintStart_toEndOf="@id/songYearLabel" />

    <!-- Genre -->
    <TextView
        android:id="@+id/songGenreLabel"
        style="@style/Text.SongInfo.Label"
        android:text="@string/genre_label"
        app:layout_constraintBottom_toTopOf="@id/songCountryLabel"
        app:layout_constraintEnd_toStartOf="@id/songGenreFetched"
        app:layout_constraintStart_toStartOf="@id/songCover" />

    <TextView
        android:id="@+id/songGenreFetched"
        style="@style/Text.SongInfo.Fetched"
        app:layout_constraintBottom_toBottomOf="@id/songGenreLabel"
        app:layout_constraintEnd_toEndOf="@id/songCover"
        app:layout_constraintStart_toEndOf="@id/songGenreLabel" />

    <!-- Country -->
    <TextView
        android:id="@+id/songCountryLabel"
        style="@style/Text.SongInfo.Label"
        android:text="@string/country_label"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintEnd_toStartOf="@id/songCountryFetched"
        app:layout_constraintStart_toStartOf="@id/songCover" />

    <TextView
        android:id="@+id/songCountryFetched"
        style="@style/Text.SongInfo.Fetched"
        app:layout_constraintBottom_toBottomOf="@id/songCountryLabel"
        app:layout_constraintEnd_toEndOf="@id/songCover"
        app:layout_constraintStart_toEndOf="@id/songCountryLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>
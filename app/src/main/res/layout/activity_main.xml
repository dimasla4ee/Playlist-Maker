<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearLayout"
    android:paddingBottom="@dimen/big_padding">

    <LinearLayout
        style="@style/LinearLayout.PanelHeader"
        android:layout_marginBottom="@dimen/medium_padding">

        <TextView
            android:id="@+id/appNameTextView"
            style="@style/Text.PanelHeader"
            android:text="@string/app_name" />
    </LinearLayout>

    <Button
        android:id="@+id/searchButton"
        style="@style/Button.MainScreen"
        android:text="@string/search"
        app:icon="@drawable/ic_search_24" />

    <Button
        android:id="@+id/mediaLibraryButton"
        style="@style/Button.MainScreen"
        android:text="@string/media_library"
        app:icon="@drawable/ic_media_library_24" />

    <Button
        android:id="@+id/settingsButton"
        style="@style/Button.MainScreen"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings_24" />
</LinearLayout>
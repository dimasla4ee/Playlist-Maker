<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainActivityScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/medium_padding"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/appNameTextView"
        style="@style/MainActivityScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="32dp"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/searchButton"
        style="@style/BigButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/small_padding"
        android:layout_weight="1"
        android:text="@string/search"
        app:icon="@drawable/ic_search_24" />

    <Button
        android:id="@+id/mediaLibraryButton"
        style="@style/BigButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/small_padding"
        android:layout_weight="1"
        android:text="@string/media_library"
        app:icon="@drawable/ic_media_library_24" />

    <Button
        android:id="@+id/settingsButton"
        style="@style/BigButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/small_padding"
        android:layout_weight="1"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings_24" />
</LinearLayout>
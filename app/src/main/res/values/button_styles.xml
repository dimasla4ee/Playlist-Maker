<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button styles -->
    <style name="Button" parent="Widget.Material3.Button.UnelevatedButton" />

    <style name="Button.MainScreen" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/normal_100</item>
        <item name="android:layout_marginVertical">@dimen/small_100</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/normal_100</item>
        <item name="android:backgroundTint">?attr/colorPrimaryFixed</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/small_100</item>
        <item name="iconTint">?attr/colorOnPrimaryFixed</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixed</item>
        <item name="android:textAppearance">@style/Text.Medium.22</item>
    </style>

    <style name="Button.Common" parent="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorSurface</item>
        <item name="android:backgroundTint">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Text.Medium.14</item>
        <item name="cornerRadius">@dimen/big_150</item>
    </style>

    <!-- FloatingActionButton styles -->
    <style name="FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="tint">?attr/colorSurface</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="FloatingActionButton.Big" parent="FloatingActionButton">
        <item name="layout_constraintWidth_percent">0.2</item>
        <item name="backgroundTint">?attr/colorOnSurface</item>
        <item name="android:layout_height">84dp</item>
        <item name="fabCustomSize">84dp</item>
    </style>

    <style name="FloatingActionButton.Small" parent="FloatingActionButton">
        <item name="layout_constraintWidth_percent">0.1</item>
        <item name="android:layout_height">50dp</item>
        <item name="fabCustomSize">50dp</item>
        <item name="backgroundTint">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>
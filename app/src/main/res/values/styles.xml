<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EditText styles -->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EditText.SearchBar" parent="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/normal_150</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginHorizontal">@dimen/small_100</item>
        <item name="android:textColorHint">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAppearance">@style/Text.Regular.16</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixed</item>
    </style>

    <!-- Switch styles -->
    <style name="Switch" />

    <style name="Switch.Setting" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="thumbTint">@color/switch_thumb_state</item>
        <item name="trackTint">@color/switch_track_state</item>
        <item name="android:layout_marginHorizontal">@dimen/small_150</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- LinearLayout styles -->
    <style name="LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout.PanelHeader" parent="LinearLayout">
        <item name="android:layout_height">@dimen/panel_header_height</item>
        <item name="android:padding">@dimen/small_50</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinearLayout.Searchbar" parent="LinearLayout">
        <item name="android:layout_height">@dimen/searchbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/normal_100</item>
        <item name="android:layout_marginVertical">@dimen/small_100</item>
        <item name="android:paddingHorizontal">@dimen/small_150</item>
        <item name="android:paddingVertical">@dimen/small_125</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">?attr/colorSurfaceContainerHighest</item>
    </style>

    <!-- Constraint Layout styles -->
    <style name="ConstraintLayout" />

    <style name="ConstraintLayout.Setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>